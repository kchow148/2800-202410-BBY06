<%- include("templates/header") %>
  <main class="form-signin w-100 m-auto">
    <form action='/settingBudget' method='post'>
      <h1 class="h3 mb-3 fw-normal">Create Budget</h1>

      <div class="form-floating">
        <input name="name" type="textarea" class="form-control" id="floatingInput" placeholder="Budget Name">
        <label for="floatingInput">Budget Name</label>
      </div>
      <div class="form-floating">
        <input name='amount' type="number" step="0.01" class="form-control" min="0" id="floatingnumber"
          placeholder="Budget Amount in Dollars">
        <label for="floatingnumber">Budget Amount in Dollars</label>
      </div>

      <div class="form-check text-start my-3">
      </div>
      <button class="btn btn-primary w-100 py-2" type="submit">Create</button>
    </form>
    <% if (error) { %>
      <%= error %>
        <% } %>
  </main>
  <%- include("templates/footer") %>