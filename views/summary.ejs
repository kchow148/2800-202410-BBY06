<%- include("templates/header") %>
<div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body h-50 p-5 text-bg-dark rounded-3">
                <div class="row align-items-md-stretch">
                    <div class="col-md-6 h-100 p-5 text-bg-dark rounded-3">
                            <% if (inflationData) { %>
                                <h1><%= inflationData.country %></h1>
                                <p>Type: <%= inflationData.type %></p>
                                <p>Period: <%= inflationData.period %></p>
                                <p>Yearly Inflation Rate (%): <%= inflationData.yearly_rate_pct %></p>
                                <p>Monthly Monthy Rate (%): <%= inflationData.monthly_rate_pct %></p>
                            <% } else { %>
                                <p>No data available</p>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <div id="newsSection">
                    <% if (newsArticles && newsArticles.length > 0) { %>
                        <% for (let i = 0; i < 3; i++) { %>
                            <% if (newsArticles[i]) { %>
                                <div class="news-item">
                                    <h3><%= newsArticles[i].title %></h3>
                                    <p><%= newsArticles[i].description %></p>
                                    <a href="<%= newsArticles[i].url %>" target="_blank">Read More</a>
                                </div>
                            <% } %>
                        <% } %>
                    <% } else { %>
                        <% if (inflationData && inflationData.country) { %>
                            <p>No recent news articles on <%= inflationData.country %>.</p> <!-- Display message for no news -->
                            <p>However, here are some other news related to the same topic:</p>
                            <!-- Display alternative news related to the same topic -->
                            <!-- You can fetch and display the alternative news here -->
                        <% } else { %>
                            <p>No recent news articles available.</p> <!-- Display generic message if country data is not available -->
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("templates/footer") %>
