<% if (exist) { %>
  <div class="d-flex flex-wrap"> <!-- Use flex-wrap to ensure items wrap into multiple rows -->
    <% for(let i = 0; i < budgets.length; i++) { %>
      <div class="col-sm-6 col-md-6 col-lg-6 mb-3"> <!-- Adjust column width for responsiveness -->
        <% if (budgets[i]) { %> <!-- Check if budget exists -->
          <%- include('templates/budgetcategorieshome', {budgetname: budgets[i].budgetname, budgetamount: budgets[i].budgetamount, expenses: expenses[i]})  %> 
        <% } %>
      </div>
    <% } %>
  </div>
  <% if (budgets.length < 6) { %>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-lg-6 mb-3 text-center"> <!-- Adjust column width for responsiveness and center the button -->
